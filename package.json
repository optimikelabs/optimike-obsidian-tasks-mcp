{
  "name": "optimike-obsidian-tasks-mcp",
  "version": "0.2.0",
  "description": "Optimike Obsidian Tasks MCP (Model Context Protocol) server for querying Obsidian Tasks.",
  "license": "MIT",
  "author": "Optimike (Mickael Ahouansou)",
  "type": "module",
  "keywords": [
    "obsidian",
    "tasks",
    "mcp",
