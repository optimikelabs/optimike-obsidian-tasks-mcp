  "repository": {
    "type": "git",
    "url": "git+https://github.com/optimikelabs/optimike-obsidian-tasks-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/optimikelabs/optimike-obsidian-tasks-mcp/issues"
  },
  "homepage": "https://github.com/optimikelabs/optimike-obsidian-tasks-mcp#readme",
  "bin": {
    "optimike-obsidian-tasks-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "NPM-README.md",
    "README.md",
    "README.fr.md",
    "mcp.json"
  ],
  "readme": "NPM-README.md",
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
